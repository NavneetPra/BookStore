@model BulkyBook.Models.ViewModels.SearchVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <div class="row pb-3 backgroundWhite">
        <input asp-for="SearchString" class="form-control" style="width:90%" />
        <button type="submit" style="width:10%"><i class="fas fa-search"></i></button>
    </div>
</form>
<a class="btn btn-success" style="width:100%" asp-area="Customer" asp-controller="Home" asp-action="Index">Back To Home</a>

<div class="row pb-3 backgroundWhite">
    @foreach (var product in Model.SearchResults)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card" style="border:0px;">
                        <img src="@product.ImageUrl" width="260" height="400" class="card-img-top rounded" />
                        <div class="pl-1">
                            <p class="card-title h5"><b style="color:#2c3e50">@product.Title</b></p>
                            <p class="card-title text-primary">by <b>@product.Author</b></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p>List Price: <strike><b class="">$ @product.ListPrice.ToString("0.00")</b></strike></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p style="color:maroon">As low as: <b class="">$ @product.Price100.ToString("0.00")</b></p>
                        </div>
                    </div>
                    <div>
                        <a asp-area="Customer" asp-controller="Home" asp-action="Details" class="btn btn-primary form-control" asp-route-id="@product.Id">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
